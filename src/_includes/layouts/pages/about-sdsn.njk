{% extends 'layouts/base.njk' %}
{% set pageType = 'Homepage' %}

{% block content %}
<main id="main-content" tabindex="-1">
<div class="about-container">
  <section class="intro-banner light">
    {% if information.networkInfo %}
        {% set header = AboutTheNetwork.bannerTitle | safe %}
        {% set subtitle = AboutTheNetwork.aboutsdsn | safe %}
            {% include "layouts/intro-banner.njk" %}
    {% endif %}
  </section>
  <section class="section-banner light">
    {% if information.networkInfo %}
        {% set header = information.networkInfo.networkName | safe %}
        {% set subtitle = AboutTheNetwork.networkdesc | safe %}
        {% set buttonText = information.networkInfo.networkName if information.networkInfo.networkName else '' %}
        {% set buttonlink = information.networkInfo.networkName if information.networkInfo.networkName else '' %}
            {% include "layouts/section-banner.njk" %}
    {% endif %}
  </section>
    <section class="feature-banner light">
        {% if information.networkInfo.networkObjectives %}
            {% set item = information.networkInfo.networkObjectives %}
                {% include "partials/components/large-feature.njk" %}
        {% endif %}
    </section>
    {% set fcolor1 = colourscheme.fcolor1 %}
    <section class="full-bleed light" {% if fcolor1 %} style="background-color:{{ fcolor1 }}"{% endif %}>
        {% if information.networkInfo.networkObjectives %}
            {% set header = information.networkInfo.networkVision | safe %}
            {% set buttonText = information.networkInfo.networkName if information.networkInfo.networkName else '' %}
            {% set buttonlink = information.networkInfo.networkName if information.networkInfo.networkName else '' %}
                {% include "partials/components/full-bleed.njk" %}
        {% endif %}
    </section>
    <section class="one-image-two-text light">
        {% if information.networkInfo.networkObjectives %}
            {% set pretext = 'HOSTED BY' | safe %}
            {% set header = information.networkInfo.hostInstitution | safe %}
            {% set logo = information.networkInfo.logo %}
                {% include "partials/components/one-image-two-text.njk" %}
        {% endif %}
    </section>
    <section class="text-top-metrics-bottom dark white-pop-out">
    {% if AboutTheNetwork.networkmetrics %}
        {% set desc = AboutTheNetwork.networkimpact | safe %}
        {% set item = AboutTheNetwork.networkmetrics %}
            {% include "partials/components/text-top-metrics-bottom.njk" %}
    {% endif %}
    </section>
</div>
</main>
{% endblock %}
