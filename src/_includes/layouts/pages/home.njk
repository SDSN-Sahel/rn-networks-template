{% extends 'layouts/base.njk' %}
{% set pageType = 'Homepage' %}

{% block content %}
<main id="main-content" tabindex="-1">
<div class="home-container">
    <section class="intro-banner with-logo" {% if bgText %} style="color:{{ bgText }}"{% endif %}>
        {% if pages.homepage.header %}
            {% set header = pages.homepage.header %}
            {% set subtitle = pages.homepage.subtitle | safe %}
                {% include "layouts/intro-banner.njk" %}
        {% endif %}
    </section>
    <section class="big-side-feature pop-out" {% if fcolor1 %} style="background-color:{{ fcolor1 }};color:{{ fcolor1Text }};"{% endif %}>
        {% if pages.homepage.featuretitle %}
                {% set header = pages.homepage.featuretitle %}
                {% set subtitle = pages.homepage.featurecontent | safe %}
                {% set img = '/uploads/map.png' %}
                {% include "partials/components/big-side-feature.njk" %}

                    {# <iframe width="500" height="300" src="https://api.maptiler.com/maps/voyager/?key=EG4iGHqupGVZXijHzjl6#{{information.networkInfo.zoom}}/{{information.networkInfo.latitude}}/{{information.networkInfo.longitude}}"></iframe> #}
                    {# <iframe width="100%" height="100%" src="https://api.maptiler.com/maps/voyager/?key=icNCSAmBYGpRHDXt1sue#{{information.networkInfo.zoom}}/{{information.networkInfo.latitude}}/{{information.networkInfo.longitude}}"></iframe> #}
                    {# <div class="map-svg" style="background-image: url(/assets/uploads/kenyaHigh.svg);">
                        {% include "src/assets/uploads/kenyaHigh.svg" %}
                    </div>  #}
        {% endif %}
    </section>
    <section class="section-banner" {% if bgText %} style="color:{{ bgText }}"{% endif %}>
        {% set header = 'Recent News' %}
        {% set subtitle = 'Read more about our current work' %}
        {% include "layouts/section-banner.njk" %}
    </section>
    <section class="resource-feature-banner">
        {% set sectionList = collections.newsArticles %}
        {% include "partials/components/resource-recent-banner.njk" %}
    </section>
    <section class="contact-us-banner" {% if fcolor1 %} style="background-color:{{ fcolor1 }};color:{{ fcolor1Text }};"{% endif %}>
        {% set header = 'Contact us' %}
        {% set cta = 'Get in touch at ' %}
        {% set email = information.networkInfo.networkEmail %}
        {% include "partials/components/contact-us-banner.njk" %}
    </section>
</div>
</main>
{% endblock %}
